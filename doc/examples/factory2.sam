/* Behaviour */
class Factory {
  public Task newInstance() {
    Task task = new Task();
    return task;
  }
}

config {
    Factory factory;
    Object otherClients;

    setup {
        factory = new Factory();
    }

    test "A" {
        Object clientA = new Unknown(factory, otherClients);
    }

    test "Other" {
        otherClients = new Unknown(factory);
    }
}

/* Goals */

denyAccess("otherClients", "taskA").
requireAccess("clientA", "taskA").


/* (force SAM to find the obvious problem first) */
invocationObject("otherClients", "A", "Unknown.*-3", "Other").


expectFailure.
